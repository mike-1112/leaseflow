<div class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Inspect & Apply</h1>

    <%= form_with model: @lead, url: leads_path, local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :full_name, "Full Name", class: "block text-sm font-medium" %>
          <%= f.text_field :full_name,
                placeholder: "John Doe",
                required: true,
                class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium" %>
          <%= f.email_field :email,
                placeholder: "you@example.com",
                required: true,
                class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :phone, "Mobile Number", class: "block text-sm font-medium" %>
          <%= f.telephone_field :phone,
                placeholder: "0412 345 678",
                required: true,
                class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :property, "Property Address or ID", class: "block text-sm font-medium" %>
          <%= f.text_field :property,
                placeholder: "123 Main St",
                required: true,
                class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <div class="mt-6">
        <%= f.submit "Submit Application",
              class: "w-full py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
