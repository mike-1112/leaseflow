<div class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Property Inspection Sign-In</h1>

    <%= form_with model: @lead, url: leads_path, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :full_name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :full_name, placeholder: "John Doe", required: true,
              class: "w-full px-4 py-2 border border-gray-400 rounded-lg bg-gray-50 focus:bg-white focus:border-blue-600 focus:ring-1 focus:ring-blue-600" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, placeholder: "you@example.com", required: true,
              class: "w-full px-4 py-2 border border-gray-400 rounded-lg bg-gray-50 focus:bg-white focus:border-blue-600 focus:ring-1 focus:ring-blue-600" %>
      </div>

      <div class="mb-4">
        <%= f.label :phone, "Mobile Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.telephone_field :phone, placeholder: "0412 345 678", required: true,
              class: "w-full px-4 py-2 border border-gray-400 rounded-lg bg-gray-50 focus:bg-white focus:border-blue-600 focus:ring-1 focus:ring-blue-600" %>
      </div>

      <div class="mb-6">
        <%= f.label :property, "Property Address or ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :property, placeholder: "e.g. 123 Main St", required: true,
              class: "w-full px-4 py-2 border border-gray-400 rounded-lg bg-gray-50 focus:bg-white focus:border-blue-600 focus:ring-1 focus:ring-blue-600" %>
      </div>

      <div>
        <%= f.submit "Sign In",
              class: "w-full py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
